// Colors
//----------------------------------------

    $color-border: #CCCCCC;
    $color-black: #000;
    $color-black-focus: #444;
    $color-white: #FFF;
    $color-pink: #ED1E7A;
    $color-pink-focus: #C01561;


// Fonts
//----------------------------------------
@font-face {
    font-family: 'DM Serif Display';
    src: url({{'DMSerifDisplay-Regular.eot' | | asset_url }});
    src: url({{'DMSerifDisplay-Regular.eot?#iefix' | | asset_url }}) format('embedded-opentype'),
        url({{'DMSerifDisplay-Regular.woff2' | | asset_url }}) format('woff2'),
        url({{'DMSerifDisplay-Regular.woff' | | asset_url }}) format('woff'),
        url({{'DMSerifDisplay-Regular.ttf' | | asset_url }}) format('truetype'),
        url('DMSerifDisplay-Regular.svg#DMSerifDisplay-Regular') format('svg');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}   

body{
    font-size: 16px;
    line-height: 24px;
    color: $color-black;
    background: $color-white;
}

    
// Headings
//----------------------------------------

h1, h2, h3, h4, h5, h6 {
    font-style: normal;
    font-weight: bold;    
    margin: 0 0 16px 0;
    padding: 0;
}

h1 {
    font-size: 32px;
    line-height: 40px;
}

h2 {
    font-size: 24px;
    line-height: 32px;
}

h3 {
    font-size: 16px;
    line-height: 24px;
}

h4, h5, h6 {
    font-size: 16px;
    line-height: 16px;
}
    
.h1-serif, .h2-serif, .h3-serif, .h4-serif, .h5-serif, .h6-serif {
    font-family: 'DM Serif Display';
    font-weight: normal;
} 

.heading-uppercase {
    font-weight: bold;
    letter-spacing: 0.1em;
    text-transform: uppercase;   
}

h1.heading-uppercase {
    font-size: 24px;
    line-height: 32px;
}

h2.heading-uppercase {
    font-size: 16px;
    line-height: 24px;
}

.heading-uppercase-small {
    font-weight: bold;
    font-size: 12px;
    line-height: 16px;
    letter-spacing: 0.1em;
    text-transform: uppercase;
}

// Topograph
//----------------------------------------

p {
    font-size: 16px;
    line-height: 24px;
    margin-bottom: 16px;
}

.crossed-text {
    font-size: 16px;
    line-height: 24px;
    text-decoration-line: line-through;
    color: $color-border; 
}

.mini-text{
    font-size: 12px;
    line-height: 16px;
}

.mini-text-uppercase {
    font-size: 12px;
    line-height: 24px;
    text-transform: uppercase;
}
