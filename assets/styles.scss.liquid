// Banner Img
// -----------------------------------------------------------

.banner {

    width: 100%;
    display: flex;
    position: relative;

    align-content: center;
    justify-content: center;

    img {
        width: 100%;
    }

    &.banner--content_bottom {       
        align-items: flex-end;        
    }

    &.banner--content_top {      
        align-items: flex-start; 
    }

    &.banner--content_center {          
        justify-content: center;     
    }

    &.banner--content_right {       
        justify-content: flex-end;
    }
}

.banner--small {
  height: 424px;
}

.banner--medium {
  height: 440px;
}

.banner--large {
  height: 496px;
}

.banner--content_block{
    position: absolute;  
}

.banner--content_block_banner_1,
.banner--content_block_banner_3 {   
    @extend .banner--content_block;   
    text-align: center;
    margin: 56px 77px;
}

.banner--content_block_banner_2{  
    @extend .banner--content_block; 
    text-align: center;  
    margin-top: 56px;   
}

.banner--content_block_banner_4{  
    @extend .banner--content_block;        
    text-align: right;
    margin: 56px 20px;
    width: 85%;

    p {
        color: #fff;
    }
}

.sec-content-text{
    margin: 32px 20px;
    
    h1 {
        margin-bottom: 23px;
    }
    
    a {
      margin-top: 8px;    
    }

}

// Product Card | Product Grid
// -----------------------------------------------------------

.product-card {
    text-align: center;
}

.grid-view-item__image-wrapper {
    margin: 0 auto 8px;
    max-width: 100% !important;
}

.grid-view-item__image {
    max-width: 100% !important;
    max-height: none !important;
}

.price--listing{
    align-items: center;

    .price__compare, dd {
        margin: 0;
        width: 100%;
    }

    {% comment %} .price-item {
        @extend .mini-text;   
    } {% endcomment %}
}


// Shopping Cart
// -----------------------------------------------------------

.site-shopping-cart{ 
    &.page-width{
        padding-left: 20px; 
        padding-right: 20px;    
    }
}

.cart-header {
    {% comment %} background: green; {% endcomment %}
    margin-top: 0;
    margin-bottom: 24px;
}

.cart {
    {% comment %} background: red; {% endcomment %}
    table {
        margin: 0;
    }

    tr:last-child {
        margin-bottom: 0;
    }
}

.cart__row {
    display: block;
    margin-bottom: 16px;

    td {
        padding-top: 0;
        padding-bottom: 15px;
    }   
}

.cart__image-wrapper {
    width: 89px;
    padding-right: 0;
}

.cart__image {
    display: block;
    width: 100%;
    height: 88px;
}

.cart__info-item {
    {% comment %} background: yellow; {% endcomment %}
    margin-left: 15px;    

    .qty-input {
        margin-top: 24px;
    }

}

.cart__product-title {
    h4 {
        margin: 0;
    }    
}

.cart__footer {
    margin-top: 24px;
}

.cart-subtotal {
    {% comment %} background: green; {% endcomment %}
    display: flex;
    justify-content: space-between;
}

.cart__shipping {
    margin-top: 24px;
}

.cart__buttons-container {
    margin-top: 8px;
    margin-bottom: 40px;
}

.cart__submit-controls {
    display: flex;
    flex-direction: column;
}

// Input qty
// -----------------------------------------------------------

.qty-input {
    display: flex; 
    height: 40px; 
    width: 123px;     
}

.qty-input__input {
    width: 55px; 
    height: 100%; 
    text-align: center; 
    outline: 1px solid #CCCCCC; 
    outline-offset: -1px;
    margin: 0 10px;
}

.qty-input__icon {
    width: 24px; 
    display: flex;
    align-items: center;    
}

