// Menu
// -----------------------------------------------------------  

.menu-open {
    overflow: hidden;
}

.mobile-nav-wrapper:not(.mobile-nav-slide) {

    .mobile-nav--close,
    .mobile-nav--open {
      display: none  
    }
}

.mobile-nav-slide {

    &.js-menu--is-open {

        &:before {
            content: '';
            display: block;
            width: 100vw;
            height: 100%;
            position: fixed;
            z-index: 90;
            background: $color-black;
            top: 0;
            right: 300px;
            bottom: 0;
            opacity: 0.5;
        }
    }
    
    &.mobile-nav-wrapper {
        width: 300px;
        right: 0;
        left: auto;
        position: fixed;
        z-index: 100;
        height: 100% !important;
        -ms-transform: translateY(0) translateX(100%);
        -webkit-transform: translateY(0) translateX(100%);
        transform: translateY(0) translateX(100%);
        padding: 0;
        overflow: visible;
    }

    .mobile-nav-slide-wrapper {
        overflow: auto;
        height: 100%;
        padding: 16px 20px;
    }

    .js-mobile-nav-toggle {
        padding: 0;
        height: 24px;
        margin: 0 0 0 auto;
        display: block;
    }

    .mobile-nav {
        padding-bottom: 16px;
    }

    .mobile-nav__sublist-link {
        padding: 0;
    }

    .mobile-nav__link {
        font-size: 20px;
        line-height: 24px;
        text-transform: uppercase;
        margin-bottom: 16px;
        padding: 8px 0;

        &.is-active {

            .icon-minus {
                display: none;
            }
    
            .icon-plus {
                display: block;
            }

            .icon-minus {
                display: block;
            }

            .icon-plus {
                display: none;
            }
        }
    }
    
    &.third-nav--is-open .mobile-nav,
    &.sub-nav--is-open .mobile-nav {
        -ms-transform: translate3d(0, 0, 0);
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0);
    }

    .mobile-nav__dropdown {
        right: 0;
        position: relative;
        z-index: 0;
        background: transparent;

        &[data-level="2"] {
            padding-left: 25px;

            .mobile-nav__link,
            .mobile-nav__sublist-link {
                font-size: 16px;
                line-height: 40px;
                height: auto;
                padding: 0;
                margin: 0;
                text-transform: uppercase;
            }
        }

        &[data-level="3"] {
            padding-left: 19px;
            border-left: 1px solid $color-border;
            margin-top: 16px;

            .mobile-nav__link,
            .mobile-nav__sublist-link {
                font-size: 14px;
            }
        }
    }

    .mobile-nav__table {
        display: none;
    }

    .mobile-nav__table-cell {
        display: block;
        width: 100%;
    }

    .mobile-nav__return {
        border: 0;
    }

    .mobile-nav__return-btn {
        display: none;
    }
}

