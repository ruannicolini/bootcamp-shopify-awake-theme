// Variables
//----------------------------------------

//colors
$color-border: #CCCCCC;
$color-black: #000;
$color-black-focus: #444;
$color-white: #FFF;
$color-pink: #ED1E7A;
$color-pink-focus: #C01561;
$color-gray: #CCCCCC;

// Backgrounds
$color-body: {{ settings.color_body_bg }};

// Header
$header-mobile-hight: 56px;

// Fonts
//----------------------------------------
@font-face {
    font-family: 'DM Serif Display';
    src: url({{'DMSerifDisplay-Regular.eot' | | asset_url }});
    src: url({{'DMSerifDisplay-Regular.eot?#iefix' | | asset_url }}) format('embedded-opentype'),
        url({{'DMSerifDisplay-Regular.woff2' | | asset_url }}) format('woff2'),
        url({{'DMSerifDisplay-Regular.woff' | | asset_url }}) format('woff'),
        url({{'DMSerifDisplay-Regular.ttf' | | asset_url }}) format('truetype'),
        url('DMSerifDisplay-Regular.svg#DMSerifDisplay-Regular') format('svg');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}   

body{
    font-size: 16px;
    line-height: 24px;
    color: $color-black;
    background: $color-white;
}

    
// Headings
//----------------------------------------

h1, h2, h3, h4, h5, h6 {
    font-style: normal;
    font-weight: bold;    
    margin: 0 0 16px 0;
    padding: 0;
}

h1 {
    font-size: 32px;
    line-height: 40px;
}

h2 {
    font-size: 24px;
    line-height: 32px;
}

h3 {
    font-size: 16px;
    line-height: 24px;
}

h4, h5, h6 {
    font-size: 16px;
    line-height: 16px;
}
    
.h1-serif, .h2-serif, .h3-serif, .h4-serif, .h5-serif, .h6-serif {
    font-family: 'DM Serif Display';
    font-weight: normal;
} 

.heading-uppercase {
    font-weight: bold;
    letter-spacing: 0.1em;
    text-transform: uppercase;   
}

h1.heading-uppercase {
    {% comment %} font-size: 24px;
    line-height: 32px; {% endcomment %}
    font-size: 32px;
    line-height: 40px;
}

h2.heading-uppercase {
    font-size: 16px;
    line-height: 24px;
}

.heading-uppercase-small {
    font-weight: bold;
    font-size: 12px;
    line-height: 16px;
    letter-spacing: 0.1em;
    text-transform: uppercase;
}

// Topograph
//----------------------------------------

p {
    font-size: 16px;
    line-height: 24px;
    margin-bottom: 16px;
}

.crossed-text {
    font-size: 16px;
    line-height: 24px;
    text-decoration-line: line-through;
    color: $color-border; 
}

.mini-text{
    font-size: 12px;
    line-height: 16px;
}

.mini-text-uppercase {
    font-size: 12px;
    line-height: 24px;
    text-transform: uppercase;
}

// Icons
// -----------------------------------------------------------    

.icon {
    width: auto;
    height: 24px;
}

// Buttons
// -----------------------------------------------------------  
button,
.btn {
    height: 48px;   
    background: $color-black;
    padding: 12px 20px;   
    border: 0;
    border-radius: 0;    

    color: $color-white;
    font-size: 14px;
    line-height: 24px;
    text-transform: uppercase;
    font-weight: normal;
    
    vertical-align: baseline;

    &:focus {
        background: $color-black-focus;
        border-radius: 0;
    }
}

.btn-small {
    height: 40px;
    padding-top: 8px;
    padding-bottom: 8px;
}

.btn-large {
    height: 56px;
    padding: 16px 20px;
} 

.btn-pink:not([disabled]),
.btn-pink {
    background: $color-pink;

    &:hover,
    &:active,
    &:focus{
        background-color: $color-pink-focus;        
    }
} 

.btn-ghost:not([disabled]),
.btn-ghost {
    background: transparent;
    outline: 1px solid $color-white;
    outline-offset: -1px;

    &:hover,
    &:active,
    &:focus{
        background-color: $color-black-focus;      
        outline-offset: -4px;  
        outline-width: 4px;
    }
}

.btn-ghost-black:not([disabled]),
.btn-ghost-black {
    color: $color-black;
    outline-color: $color-black;

    &:hover,
    &:active,
    &:focus{
        color: $color-black;    
        outline-color: $color-black;
        background-color: transparent;

    }
}

.btn-ghost-gray:not([disabled]),
.btn-ghost-gray {
    color: $color-black;
    outline-color: $color-gray;

    &:hover,
    &:active,
    &:focus{
        color: $color-black;    
        outline-color: $color-gray;
        background-color: transparent;

    }
}

//badge
// -----------------------------------------------------------  

.badge {
    height: 24px;
    background :$color-pink;
    border-radius: 5px;
    padding: 4px 5px;

    color: $color-white;
    @extend .mini-text-uppercase;

}

// Forms
// -----------------------------------------------------------

// Minicart
// -----------------------------------------------------------

.minicart-trigger {

    .badge {
        line-height: 16px;
        {% comment %} padding: 4px 2px 4px 5px; {% endcomment %}
        padding: 4px 5px;
        min-width: 25px;
        display: inline-block;
        text-align: center;
    }
}

// Header
// -----------------------------------------------------------

.page-container {
    padding-top: $header-mobile-hight;
}

.site-header__logo-image {

    img{
        height: 40px;
    }

}

.site-header {
    position: fixed;
    width: 100%;
    height: $header-mobile-hight;
    z-index: 999;
    background: $color-body; 
    padding: 8px 20px;
}

.site-header__icon {
    
    padding: 0;
    height: 24px;
    width:24px; 
    {% comment %} margin-left: 20px; {% endcomment %}

    &.site-header__menu {
        margin-left: 20px;
    }

    &.site-header__cart {
        margin-left: 15px;
    }

}

.site-header__logo-wrapper {
    with:auto;
}

.site-header__logo {
    margin: 0;
}

{% comment %} ////////////////////////////// {% endcomment %}

.site-footer { 
    padding: 48px 60px 16px 60px;

    .page-width {
        padding: 0;
    }
}

.site-footer__item {}

.site-footer__item-inner--logo_img {
    margin: auto;
    margin-bottom: 26px;
}

.site-footer__logo {
    img {
        height: 48px;
        display: block;
    }
}

.site-footer__item-inner--text {
    text-align: center;

    font-family: Nunito;
    font-style: normal;
    font-weight: normal;
    font-size: 16px;
    line-height: 24px;
    color: #FFFFFF;
}

.site-footer__rte {
    margin-bottom: 56px;
}

.site-footer__copyright-content {
    display: block;
}

.site-footer__icon-list {
    margin-top: 56px;
    margin-bottom: 40px;
}


