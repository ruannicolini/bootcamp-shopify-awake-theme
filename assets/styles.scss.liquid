// Variables
//----------------------------------------

//colors
$color-border: #CCCCCC;
$color-black: #000;
$color-black-focus: #444;
$color-white: #FFF;
$color-pink: #ED1E7A;
$color-pink-focus: #C01561;
$color-gray: #CCCCCC;

// Backgrounds
$color-body: {{ settings.color_body_bg }};

// Header
$header-mobile-hight: 56px;

// Fonts
//----------------------------------------
@font-face {
    font-family: 'DM Serif Display';
    src: url({{'DMSerifDisplay-Regular.eot' | | asset_url }});
    src: url({{'DMSerifDisplay-Regular.eot?#iefix' | | asset_url }}) format('embedded-opentype'),
        url({{'DMSerifDisplay-Regular.woff2' | | asset_url }}) format('woff2'),
        url({{'DMSerifDisplay-Regular.woff' | | asset_url }}) format('woff'),
        url({{'DMSerifDisplay-Regular.ttf' | | asset_url }}) format('truetype'),
        url('DMSerifDisplay-Regular.svg#DMSerifDisplay-Regular') format('svg');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}   

body{
    font-size: 16px;
    line-height: 24px;
    color: $color-black;
    background: $color-white;
}

    
// Headings
//----------------------------------------

.h1, .h2, .h3, .h4, .h5, .h6,
h1, h2, h3, h4, h5, h6 {
    font-style: normal;
    font-weight: bold;    
    margin: 0 0 16px 0;
    padding: 0;
}

.h1, 
h1 {
    font-size: 32px;
    line-height: 40px;
}

.h2, 
h2 {
    font-size: 24px;
    line-height: 32px;
}

.h3, 
h3 {
    font-size: 16px;
    line-height: 24px;
}

.h4, .h5, .h6, 
h4, h5, h6 {
    font-size: 16px;
    line-height: 16px;
}
    
.h1-serif, .h2-serif, .h3-serif, .h4-serif, .h5-serif, .h6-serif {
    font-family: 'DM Serif Display';
    font-weight: normal;
} 

.heading-uppercase {
    font-weight: bold;
    letter-spacing: 0.1em;
    text-transform: uppercase;   
}

.h1.heading-uppercase {
    font-size: 24px;
    line-height: 32px;

    @media (min-width: 750px) {      
        font-size: 32px;
        line-height: 40px;
    }
}

.h2.heading-uppercase {
    font-size: 16px;
    line-height: 24px;
}

.heading-uppercase-small {
    font-weight: bold;
    font-size: 12px;
    line-height: 16px;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    
}



// Topograph
//----------------------------------------

p {
    font-size: 16px;
    line-height: 24px;
    margin-bottom: 16px;
}

.crossed-text {
    font-size: 16px;
    line-height: 24px;
    text-decoration-line: line-through;
    color: $color-border; 
}

.mini-text{
    font-size: 12px;
    line-height: 16px;
}

.mini-text-uppercase {
    font-size: 12px;
    line-height: 24px;
    text-transform: uppercase;
}

// Icons
// -----------------------------------------------------------    

.icon {
    width: auto;
    height: 24px;
}

.icon-arrow-right {
    transform: rotate(-90deg);    
}

.icon-arrow-left {  
    transform: rotate(90deg);     
}


// Pagination
// ----------------------------------------------------------- 

.pagination__text {

    .current-item {
        position: relative;

        &:before {
            content: '';
            display: block;
            width: 100%;
            height: 1px;
            background: $color-black;
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
        }
        
    }
}


// Buttons
// -----------------------------------------------------------  
button,
.btn {
    height: 48px;   
    background: $color-black;
    padding: 12px 20px;   
    border: 0;
    border-radius: 0;    

    color: $color-white;
    font-size: 14px;
    line-height: 24px;
    text-transform: uppercase;
    font-weight: normal;
    
    vertical-align: baseline;

    &:focus {
        background: $color-black-focus;
        border-radius: 0;
    }
}

.btn-small {
    height: 40px;
    padding-top: 8px;
    padding-bottom: 8px;
}

.btn-large {
    height: 56px;
    padding: 16px 20px;
} 

.btn-pink:not([disabled]),
.btn-pink {
    background: $color-pink;

    &:hover,
    &:active,
    &:focus{
        background-color: $color-pink-focus;        
    }
} 

.btn-ghost:not([disabled]),
.btn-ghost {
    background: transparent;
    outline: 1px solid $color-white;
    outline-offset: -1px;

    &:hover,
    &:active,
    &:focus{
        background-color: $color-black-focus;      
        outline-offset: -4px;  
        outline-width: 4px;
    }
}

.btn-ghost-black:not([disabled]),
.btn-ghost-black {
    color: $color-black;
    outline-color: $color-black;

    &:hover,
    &:active,
    &:focus{
        color: $color-black;    
        outline-color: $color-black;
        background-color: transparent;

    }
}

.btn-ghost-gray:not([disabled]),
.btn-ghost-gray {
    color: $color-black;
    outline-color: $color-gray;

    &:hover,
    &:active,
    &:focus{
        color: $color-black;    
        outline-color: $color-gray;
        background-color: transparent;

    }
}

//badge
// -----------------------------------------------------------  

.badge {
    height: 24px;
    background :$color-pink;
    border-radius: 5px;
    padding: 4px 5px;

    color: $color-white;
    @extend .mini-text-uppercase;

}

// Forms
// -----------------------------------------------------------

// Minicart
// -----------------------------------------------------------

.minicart-trigger {

    .badge {
        line-height: 16px;
        padding: 4px 5px;
        min-width: 25px;
        display: inline-block;
        text-align: center;
    }
}

// Header
// -----------------------------------------------------------

.page-container {
    padding-top: $header-mobile-hight;
}

.site-header__logo-image {

    img{
        height: 40px;
    }

}

.site-header {
    position: fixed;
    width: 100%;
    height: $header-mobile-hight;
    z-index: 999;
    background: $color-body; 
    padding: 8px 20px;
}

.site-header__icons-wrapper {
    display: inline;
}

.site-header__icon {
    padding: 0;
    height: 24px;
    width: 24px;

    &.site-header__menu {
        margin-left: 16px;
    }

    &.site-header__cart {
        margin-left: 16px;
    }
}

.site-header__logo-wrapper {
    with:auto;
}

.site-header__logo {
    margin: 0;
}

// Search Bar
// -----------------------------------------------------------

.search-bar {
    height: 56px;
    padding: 16px 20px;

    &:after {
        content: '';
        width: 100%;
        height: 1px;
        background: $color-border;
        position: absolute;
        display: block;
        left: 0;
        right: 0;
        bottom: 0;
    }
}

.search-form__input {
    padding: 0;
    height: 24px;
    border: 0;
    outline: 0;   
}

.search-form__input-wrapper {
    padding-left: 44px; 
}

.search-bar__close {
    padding: 0;    
    width: 24px;
    height: 24px;
    text-align: center;
}

.search-bar__submit {
    right: auto;
    left: 0;   
    padding: 0;
    width: 24px;
    height: 24px;

    &:hover,
    &:focus {
        background: transparent;
    }
}

// Footer
// -----------------------------------------------------------

.site-footer { 
    padding: 48px 60px 16px 60px;

    .page-width {
        padding: 0;
    }
}

.site-footer__item {}

.site-footer__item-inner--logo_img {
    margin: auto;
    margin-bottom: 24px;
}

.site-footer__logo {
    img {
        height: 48px;
        display: block;
    }
}

.site-footer__item-inner--text {
    text-align: center;

    font-family: Nunito;
    font-style: normal;
    font-weight: normal;
    font-size: 16px;
    line-height: 24px;
    color: #FFFFFF;
}

.site-footer__rte {
    margin-bottom: 56px;
}

.site-footer__copyright-content {
    display: block;
}

.site-footer__icon-list {
    margin-top: 56px;
    margin-bottom: 40px;
}

.site-footer__item-inner--link_list {
    width: 100%;

    ul {
        margin: 0;

        &.active {
            display: block; 
        }
    }

    a { 
        display: block;
    }
       
    .level-1 {
        text-transform: uppercase; 
        font-size: 20px;
        line-height: 24px;
    }

    .level-2 {
        display: none;
        margin: 16px 0 0 25px;
        li {
            text-transform: uppercase;
            font-size: 16px;
            line-height: 24px;
            padding: 8px 0;
        }
    }

    .level-3 {
        display: none;
    }

}

.site-footer__linklist-item {
    margin-bottom: 32px;

    &:last-child {
        margin-bottom: 0;
    }
}


// Collections
// -----------------------------------------------------------

.collection-hero__title-wrapper {

    h1 {
        margin-bottom: 24px;
    }

}

.collection-description {
    text-align: center; 
}

.filters-toolbar__item {
    &.filters-toolbar__item--count {
        display: none;
    }  
}

// Menu
// -----------------------------------------------------------  

.menu-open {
    overflow: hidden;
}

.mobile-nav-wrapper:not(.mobile-nav-slide) {

    .mobile-nav--close,
    .mobile-nav--open {
      display: none  
    }
}

.mobile-nav-slide {

    &.js-menu--is-open {

        &:before {
            content: '';
            display: block;
            width: 100vw;
            height: 100%;
            position: fixed;
            z-index: 90;
            background: $color-black;
            top: 0;
            right: 300px;
            bottom: 0;
            opacity: 0.5;
        }
    }
    
    &.mobile-nav-wrapper {
        width: 300px;
        background: red;
        right: 0;
        left: auto;
        position: fixed;
        z-index: 100;
        height: 100% !important;
        -ms-transform: translateY(0) translateX(100%);
        -webkit-transform: translateY(0) translateX(100%);
        transform: translateY(0) translateX(100%);
        padding: 0;
        overflow: visible;
    }

    .mobile-nav-slide-wrapper {
        background: green;
        overflow: auto;
        height: 100%;
        padding: 16px 20px;
    }

    .js-mobile-nav-toggle {
        background: red;
        padding: 0;
        height: 24px;
        margin: 0 0 0 auto;
        display: block;
    }

    .mobile-nav {
        padding-bottom: 16px;
    }

    .mobile-nav__link, 
    .mobile-nav__sublist-link {
        padding: 0;
    }
    
    &.third-nav--is-open .mobile-nav,
    &.sub-nav--is-open .mobile-nav {
        -ms-transform: translate3d(0, 0, 0);
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0);
    }

    .mobile-nav__dropdown {
        right: 0;
        position: relative;
        z-index: 0;
    }

    .mobile-nav__table {
        display: block;
        background: yellow;
    }

    .mobile-nav__table-cell {
        display: block;
        width: 100%;
    }

    .mobile-nav__return {
        border: 0;
    }

    .mobile-nav__return-btn {
        background: red !important;
        width: 100%;
        padding: 0;
    }
}

