        .swatch-wrapper {
            display: flex;
        }

        .single-option-selector {
            display: none;
        }
    }
}

.swatch-wrapper {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: -16px;
}

.swatch-option {

    label  {
        border: 1px solid $color-border;
        font-size: 0;
        outline: 0 solid $color-white;
        outline-offset: 0;
        width: 40px;
        height: 40px;
        margin-right: 15px;
        transition: ease-in .1s all;
        margin-bottom: 16px;
    }

    input {
        opacity: 0;
        height: 0;
        width: 0;
        min-height: 0;
        padding: 0;
        position: absolute;
        border: 0;
        outline: 0;
        background: transparent;
        

        &:focus {

            + label {
                border-color: $color-black;
            }
        }

        &:checked {

            + label {
                border-color: $color-black;
                outline-width: 2px;
                outline-offset: -3px;
            }
        }
    }

    &:nth-child(5n) {

        label {
            margin-right: 0;
        }
    }

}

